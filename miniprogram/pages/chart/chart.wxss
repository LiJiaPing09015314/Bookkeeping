.chart_header{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:180rpx;
  background:#ffd700;
}
.book_type_name{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  text-align:center;
  font-weight:bold;
}
.amttype_picker{
  position:relative;
  margin:0 auto;
  display:block;
  width:120rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  text-align:center;
}
.amttype_picker::after{
  position:absolute;
  right:0;
  top:38rpx;
  content:'';
  width:0;
  height:0;
  border:10rpx solid transparent;
  border-top-color:#000;
}
.date_range_wrapper{
  margin:20rpx auto;
  width:400rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;
  border:1rpx solid #000;
  border-radius:10rpx;
  overflow:hidden;
}
.date_range_wrapper text{
  float:left;
  width:50%;
  text-align:center;
}
.date_range_wrapper text:first-of-type{
  border-right:1rpx solid #000;
}
.date_range_wrapper text.active{
  background:#333;
  color:#ffd700;
}
.padding_260{
  width:100%;
  height:260rpx;
}


.date_range{
  position:fixed;
  left:0;
  top:180rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  box-sizing:border-box;
  width:100%;
  height:80rpx;
  overflow:hidden;
  white-space: nowrap;
  background:#fff;
}
.date_range_item{
  box-sizing:border-box;
  display:inline-block;
  margin-left:20rpx;
  margin-right:20rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  color:#666;
  text-align:center;
}
.date_range_item.active{
  color:#000;
  border-bottom:4rpx solid #000;
}