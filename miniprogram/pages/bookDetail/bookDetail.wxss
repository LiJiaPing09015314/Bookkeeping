.detail_header{
  padding-top:20rpx;
  box-sizing:border-box;
  width:100%;
  height:180rpx;
  background:#ffd700;
}
.detail_img_wrapper{
  padding:15rpx;
  box-sizing:border-box;
  margin:0 auto;
  display:block;
  width:80rpx;
  height:80rpx;
  background:#fff;
  border-radius:50%;
}
.detail_img_wrapper image{
  display:block;
  width:50rpx;
  height:50rpx;
}
.detail_header text{
  display:block;
  width:100%;
  height:60rpx;
  line-height:60rpx;
  font-size:24rpx;
  text-align:center;
}

/* 内容 */
.detail_item{
  margin:0 auto;
  width:710rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #eee;
}
.detail_left{
  float:left;
  width:100rpx;
  color:#666;
  text-align:center;
}
.detail_right{
  float:left;
  width:500rpx;
}
/* 底部 */
.detail_footer{
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-top:1rpx solid #eee;
}
.detail_footer text{
  position:relative;
  float:left;
  width:50%;
}
.detail_footer text.edit::after{
  position:absolute;
  right:0;
  top:20rpx;
  content:'';
  width:1rpx;
  height:60rpx;
  background:#eee;
}